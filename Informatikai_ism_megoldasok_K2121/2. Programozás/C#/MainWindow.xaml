<Window x:Class="SuperBowlGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperBowlGUI"
        mc:Ignorable="d"
        Title="Átváltó" Height="130" Width="320">
    <WrapPanel>
        <GroupBox BorderThickness="0">
            <StackPanel>
                <Label Content="Római szám [I-X]:"/>
                <TextBox x:Name="InputRómai" Width="50" />
            </StackPanel>
        </GroupBox>
        <StackPanel>
            <Button x:Name="BtnIrány" Content="--->" Height="20" Width="40" Margin="10" Click="BtnIrány_Click"/>
            <Button x:Name="BtnÁtvált" Content="Átvált" Height="20" Width="40" Margin="10" Click="BtnÁtvált_Click"/>
        </StackPanel>
        <GroupBox BorderThickness="0">
            <StackPanel>
                <Label Content="Arab szám [1-10]:"/>
                <TextBox x:Name="InputArab" Width="50" IsEnabled="False" />
            </StackPanel>
        </GroupBox>
    </WrapPanel>
</Window>
